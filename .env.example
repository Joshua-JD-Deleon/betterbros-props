# Auth Provider (clerk or supabase)
AUTH_PROVIDER=clerk

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/betterbros?sslmode=disable
DATABASE_URL_PROD=postgresql://user:password@neon-host:5432/betterbros?sslmode=require

# Redis Cache
REDIS_URL=redis://localhost:6379
REDIS_URL_PROD=rediss://:token@upstash-host:6379

# The Odds API Configuration
# Get your free API key at: https://the-odds-api.com/
# Free tier: 500 requests per month
ODDS_API_KEY=your_api_key_here

# SportsGameOdds API Configuration
# Get your API key from SportsGameOdds
SPORTGAMEODDS_API_KEY=your_api_key_here

# Additional API Keys
SLEEPER_API_KEY=
OPENWEATHER_KEY=

# API Configuration
FLY_API_HOST=https://your-api.fly.dev
NEXT_PUBLIC_API_BASE=http://localhost:8000

# Clerk Auth (default)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Supabase Auth (alternative)
NEXT_PUBLIC_SUPABASE_URL=
NEXT_PUBLIC_SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE_KEY=

# Feature Flags
ENABLE_MOBILE_OFFLINE=true
ENABLE_WHAT_IF_SANDBOX=true
ENABLE_CORRELATION_INSPECTOR=true
ENABLE_CALIBRATION_MONITOR=true
ENABLE_EXPERIMENT_TRACKING=true
ENABLE_PERFORMANCE_METRICS=true
