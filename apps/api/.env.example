# Environment
ENVIRONMENT=development

# Authentication (choose one)
AUTH_PROVIDER=clerk  # or supabase

# Clerk Configuration
CLERK_SECRET_KEY=your_clerk_secret_key
CLERK_JWT_ISSUER=https://your-app.clerk.accounts.dev

# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_JWT_SECRET=your_supabase_jwt_secret
SUPABASE_SERVICE_KEY=your_supabase_service_key

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/betterbros_props
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50
REDIS_CACHE_TTL=300

# External APIs - Sports Data
PRIZEPICKS_API_KEY=your_prizepicks_api_key
UNDERDOG_API_KEY=your_underdog_api_key
ESPN_API_KEY=your_espn_api_key
NBA_API_KEY=your_nba_api_key
SPORTSRADAR_API_KEY=your_sportsradar_api_key

# External APIs - AI/ML
OPENAI_API_KEY=your_openai_api_key
ANTHROPIC_API_KEY=your_anthropic_api_key

# Model Configuration
MODEL_VERSION=v1.0.0
MODEL_REGISTRY_URL=http://localhost:5000

# Feature Store
FEATURE_STORE_ENABLED=true
FEATURE_CACHE_TTL=3600

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Optimization
MAX_PARLAY_SIZE=5
OPTIMIZATION_TIMEOUT=30

# Backtesting
BACKTEST_MAX_DAYS=90
BACKTEST_CACHE_ENABLED=true

# Background Jobs (optional)
# CELERY_BROKER_URL=redis://localhost:6379/1
# CELERY_RESULT_BACKEND=redis://localhost:6379/2

# Monitoring & Logging
# SENTRY_DSN=your_sentry_dsn
LOG_LEVEL=INFO

# API Keys Management
API_KEY_ENCRYPTION_KEY=your_32_byte_encryption_key_base64_encoded
